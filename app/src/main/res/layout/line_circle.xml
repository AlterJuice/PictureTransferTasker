<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="hand_line_circle"
    android:id="@+id/hand_line_circle"
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_shape"
    android:backgroundTint="@color/black"
    android:minWidth="60dp"
    android:padding="10dp">
    <View
        android:tag="hand_line"
        android:id="@+id/hand_line"
        android:layout_width="70dp"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/teal_700"
        />
    <View
        android:tag="hand_circle"
        android:id="@+id/hand_circle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/hand_line"
        android:background="@drawable/center_circle"
        android:backgroundTint="@color/teal_700"
        />
</RelativeLayout>